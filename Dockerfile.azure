FROM rust:1.83 as builder

WORKDIR /app
COPY Cargo.toml ./
COPY src ./src

# Build in release mode (Cargo will generate Cargo.lock)
RUN cargo build --release

FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY --from=builder /app/target/release/backend /app/tell

EXPOSE 3010

CMD ["/app/tell"]
